---
import Layout from "../layouts/Layout.astro";
import layoutStyles from "../layouts/Layout.module.css"; // Import layout styles for container
import styles from "./index.module.css";
import PostCard from "../components/PostCard.astro"; // Import the new component

// Placeholder data - replace with actual data fetching later
const posts = [
  {
    slug: "post-1",
    title: "My First Blog Post",
    excerpt: "This is a short summary of the first post.",
  },
  {
    slug: "post-2",
    title: "Responsive Design Tips",
    excerpt: "Learn how to make your layouts adapt.",
  },
  {
    slug: "post-3",
    title: "Introduction to Astro",
    excerpt: "Why Astro is great for content sites.",
  },
  {
    slug: "post-4",
    title: "CSS Modules Explained",
    excerpt: "Scoped CSS for your components.",
  },
];

const pageTitle = "My Blog";
---

<Layout title={pageTitle}>
  <div
    class:list={[
      layoutStyles.container,
      layoutStyles.maxWidth4xl,
      styles.pageContainer,
    ]}
  >
    <h1 class={styles.pageTitle}>{pageTitle}</h1>
    <p class={styles.pageSubtitle}>
      Welcome! Here are my latest thoughts and findings.
    </p>

    <section class={styles.postsGrid}>
      {
        posts.map((post) => (
          <PostCard
            slug={post.slug}
            title={post.title}
            excerpt={post.excerpt}
          />
        ))
      }
    </section>
  </div>
</Layout>
