---
import "../styles/global.css";
import Layout from '../layouts/Layout.astro';
---

<Layout title="My Blog - Home">
	<main>
		<section class="bg-gradient-to-b from-blue-100 to-white py-16">
			<div class="container mx-auto px-4 max-w-4xl">
				<h1 class="text-4xl md:text-5xl font-bold mb-4 text-gray-800">Welcome to My Blog</h1>
				<p class="text-xl text-gray-600 max-w-2xl">
					Discover the latest insights, tutorials, and stories in technology.
				</p>
			</div>
		</section>

		<section class="py-12">
			<div class="container mx-auto px-4 max-w-4xl">
				<h2 class="text-3xl font-bold mb-8 text-gray-800 border-b pb-4">Latest Posts</h2>
				
				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
					<article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
						<div class="p-6">
							<h3 class="text-xl font-semibold mb-3">
								<a href="/posts/post1" class="text-blue-600 hover:text-blue-800">Post Title 1</a>
							</h3>
							<p class="text-gray-600">A brief introduction to the topic of post 0.</p>
							<div class="mt-4">
								<a href="/posts/post1" class="inline-block text-blue-600 hover:text-blue-800 font-medium">
									Read more →
								</a>
							</div>
						</div>
					</article>
					
					<article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
						<div class="p-6">
							<h3 class="text-xl font-semibold mb-3">
								<a href="/posts/post2" class="text-blue-600 hover:text-blue-800">Post Title 2</a>
							</h3>
							<p class="text-gray-600">A brief introduction to the topic of post 1.</p>
							<div class="mt-4">
								<a href="/posts/post2" class="inline-block text-blue-600 hover:text-blue-800 font-medium">
									Read more →
								</a>
							</div>
						</div>
					</article>
					
					<article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
						<div class="p-6">
							<h3 class="text-xl font-semibold mb-3">
								<a href="/posts/post3" class="text-blue-600 hover:text-blue-800">Post Title 3</a>
							</h3>
							<p class="text-gray-600">A brief introduction to the topic of post 2.</p>
							<div class="mt-4">
								<a href="/posts/post3" class="inline-block text-blue-600 hover:text-blue-800 font-medium">
									Read more →
								</a>
							</div>
						</div>
					</article>
				</div>
			</div>
		</section>
	</main>
</Layout>
