---
import styles from "./PostCard.module.css";

export interface Props {
  slug: string;
  title: string;
  excerpt: string;
}

const { slug, title, excerpt } = Astro.props;
---

<article class={styles.postCard}>
  <div class={styles.postCardContent}>
    <h2 class={styles.postCardTitle}>
      <a href={`/blog/${slug}`} class={styles.postLink}>{title}</a>
    </h2>
    <p class={styles.postCardExcerpt}>{excerpt}</p>
    <a href={`/blog/${slug}`} class={styles.postCardReadMore}
      >Read More &rarr;</a
    >
  </div>
</article>

